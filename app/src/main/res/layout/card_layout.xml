<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@color/gray"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/maker_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Maker: "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/color_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="Color:"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/maker_tv" />

        <TextView
            android:id="@+id/maker_id"
            android:layout_width="127dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:text="TextView"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/maker_tv"
            card_view:layout_constraintStart_toEndOf="@+id/maker_tv" />

        <TextView
            android:id="@+id/model_id"
            android:layout_width="132dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/Model_tv"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/Model_tv" />

        <TextView
            android:id="@+id/color_id"
            android:layout_width="127dp"
            android:layout_height="22dp"
            android:text="TextView"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/color_tv"
            card_view:layout_constraintEnd_toEndOf="@+id/maker_id"
            card_view:layout_constraintStart_toStartOf="@+id/maker_id" />

        <TextView
            android:id="@+id/price_id"
            android:layout_width="133dp"
            android:layout_height="21dp"
            android:text="TextView"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/price_tv"
            card_view:layout_constraintEnd_toEndOf="@+id/model_id"
            card_view:layout_constraintStart_toStartOf="@+id/model_id" />

        <TextView
            android:id="@+id/seats_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/seats_tv"
            card_view:layout_constraintEnd_toEndOf="@+id/color_id"
            card_view:layout_constraintStart_toStartOf="@+id/color_id" />

        <TextView
            android:id="@+id/year_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/year_tv"
            card_view:layout_constraintEnd_toEndOf="@+id/price_id"
            card_view:layout_constraintStart_toStartOf="@+id/price_id" />

        <TextView
            android:id="@+id/number_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            card_view:layout_constraintStart_toEndOf="@+id/carNumber_tv"
            card_view:layout_constraintTop_toBottomOf="@+id/seats_id" />

        <TextView
            android:id="@+id/Model_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Model:"
            card_view:layout_constraintStart_toEndOf="@+id/maker_id"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Price: "
            card_view:layout_constraintStart_toEndOf="@+id/color_id"
            card_view:layout_constraintTop_toBottomOf="@+id/Model_tv" />

        <TextView
            android:id="@+id/seats_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="Seats: "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/color_tv" />

        <TextView
            android:id="@+id/year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Year: "
            card_view:layout_constraintStart_toEndOf="@+id/seats_id"
            card_view:layout_constraintTop_toBottomOf="@+id/price_tv" />

        <TextView
            android:id="@+id/carNumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="CarNumber: "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/seats_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>